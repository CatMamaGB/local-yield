# The Local Yield — environment variables
# Copy to .env and fill in values.

# Staging/Preview password gate (DO NOT enable on production unless you want private beta)
# Enable only on Vercel Preview/Staging; set APP_GATE_ENABLED=false or unset on Production.
APP_GATE_ENABLED=false
APP_GATE_USER=demo
APP_GATE_PASS=change-me

# Preview mode: public landing + private app with passphrase + identity + audit log.
# When PREVIEW_MODE=true, the preview landing + passphrase flow is used; when false, Basic Auth (above) is unchanged.
# Use only on Preview/Staging; never enable on Production unless you want private beta.
PREVIEW_MODE=false
PREVIEW_PASSCODE=change-me
PREVIEW_COOKIE_SECRET=change-me-long-random

# PostgreSQL (required for Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/local_yield?schema=public"

# Stripe (optional until payments are wired)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Optional: review resolution window (48–72 hours). Default: 48.
# RESOLUTION_WINDOW_HOURS=48


# Dev tools: set to "true" ONLY on staging/Preview; NEVER set on Production (Vercel: use env per environment)
# NEXT_PUBLIC_ENABLE_DEV_TOOLS=true

# Auth (Clerk or Supabase — add when integrating)
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
# CLERK_SECRET_KEY=
# or
# NEXT_PUBLIC_SUPABASE_URL=
# NEXT_PUBLIC_SUPABASE_ANON_KEY=
# SUPABASE_SERVICE_ROLE_KEY=
