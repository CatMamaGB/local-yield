# The Local Yield — environment variables
# Copy to .env and fill in values.

# PostgreSQL (required for Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/local_yield?schema=public"

# Stripe (optional until payments are wired)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Feature flags (env first; DB FeatureFlag table later)
# Care: when true, Care nav link and /care/browse, /care/caregiver/* are enabled; when false, Care shows "Coming soon" and sub-routes redirect to /care
NEXT_PUBLIC_ENABLE_CARE=false

# Dev tools: set to "true" ONLY on staging/Preview; NEVER set on Production (Vercel: use env per environment)
# NEXT_PUBLIC_ENABLE_DEV_TOOLS=true

# Auth (Clerk or Supabase — add when integrating)
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
# CLERK_SECRET_KEY=
# or
# NEXT_PUBLIC_SUPABASE_URL=
# NEXT_PUBLIC_SUPABASE_ANON_KEY=
# SUPABASE_SERVICE_ROLE_KEY=
