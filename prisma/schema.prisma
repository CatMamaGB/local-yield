// The Local Yield - One platform, two surfaces (Market + Care).
// https://pris.ly/d/prisma-schema
//
// Shared infrastructure (build once):
//   - User: one table, role flags (isProducer, isBuyer, isCaregiver, isHomesteadOwner). Same login, same account.
//   - Location: User.zipCode + lib/geo radius logic for Market discovery and Caregiver proximity.
//   - Messaging: Conversation + Message (Buyer↔Producer, Owner↔Caregiver).
//   - Reviews: generic reviewer/reviewee + type (market | care).
//   - Stripe: one-time payments; structure cleanly for future split payouts / escrow (Care).
//
// Market = Product + Order. Care = ServiceListing + CareBooking (later); hidden behind feature flag until Market has traction.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  BUYER
  PRODUCER
  CAREGIVER
  CARE_SEEKER
  ADMIN
}

/// What the user wants to do most often; drives post-login/onboarding redirect.
enum PrimaryMode {
  MARKET
  SELL
  CARE
}

/// How the user plans to use the platform (identity + intent).
enum PlatformUse {
  BUY_LOCAL_GOODS
  SELL_PRODUCTS
  FIND_ANIMAL_CARE
  OFFER_ANIMAL_CARE
  BOTH_MARKET_AND_CARE
  OTHER
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  /// Required: single source of truth for contact. (Migration backfills existing rows then sets NOT NULL.)
  phone     String
  /// Optional; when null show "Add ZIP to see results near you". Only require when feature needs it (browse filter, post job, seller pickup).
  zipCode   String?
  /// Optional address.
  addressLine1 String?  @map("address_line_1")
  city      String?
  state     String?
  /// Required: how they plan to use the platform.
  platformUse PlatformUse @map("platform_use")
  bio       String?
  avatarUrl String?
  createdAt DateTime  @default(now())
  /// Clerk (or other provider) external id for sync.
  clerkId   String?   @unique @map("clerk_id")

  /// Legacy: kept for backward compat; prefer userRoles for role decisions.
  role      Role      @default(BUYER)
  isProducer       Boolean @default(false)
  isBuyer          Boolean @default(false)
  isCaregiver      Boolean @default(false)
  isHomesteadOwner Boolean @default(false)

  /// Primary mode for first landing after login/onboarding. Null = use role fallback.
  primaryMode   PrimaryMode? @map("primary_mode")
  /// Set when user completes onboarding.
  onboardedAt   DateTime?   @map("onboarded_at")
  /// When user accepted Terms of Use (stops redirect loops; used for checklist/analytics).
  termsAcceptedAt   DateTime?   @map("terms_accepted_at")
  /// When core onboarding was completed (terms + optional ZIP); used for checklist/analytics.
  onboardingCompletedAt DateTime? @map("onboarding_completed_at")
  /// If false, producers cannot include this user in contact export (CSV).
  allowProducerExport Boolean @default(true) @map("allow_producer_export")

  userRoles     UserRole[]
  products     Product[]
  customCategoriesCreated CustomCategory[]
  producerProfile ProducerProfile?
  caregiverProfile CaregiverProfile?
  careSeekerProfile CareSeekerProfile?
  ordersAsBuyer    Order[]    @relation("OrderBuyer")
  ordersAsProducer Order[]    @relation("OrderProducer")
  events       Event[]
  reviewsReceived   Review[]   @relation("ReviewProducer")
  reviewsAsReviewee Review[]   @relation("ReviewReviewee")
  reviewsGiven      Review[]   @relation("ReviewReviewer")
  subscriptionsAsSubscriber Subscription[] @relation("SubscriptionSubscriber")
  subscriptionsAsProducer   Subscription[] @relation("SubscriptionProducer")
  itemRequests ItemRequest[]
  producerCustomerNotesAsProducer ProducerCustomerNote[] @relation("ProducerCustomerNoteProducer")
  producerCustomerNotesAsBuyer    ProducerCustomerNote[] @relation("ProducerCustomerNoteBuyer")

  /// Messaging: conversations where this user is a participant
  conversationsAsA Conversation[] @relation("ConversationUserA")
  conversationsAsB Conversation[] @relation("ConversationUserB")
  messagesSent     Message[]

  /// Care relations
  caregiverListings CareServiceListing[]
  careBookingsAsSeeker CareBooking[] @relation("CareBookingSeeker")
  careBookingsAsCaregiver CareBooking[] @relation("CareBookingCaregiver")
  helpExchangePostings HelpExchangePosting[]
  helpExchangeBids     HelpExchangeBid[]
  reportsAsReporter Report[] @relation("ReportReporter")
  reportsAsReviewer Report[] @relation("ReportReviewer")
  reportsAssignedTo Report[] @relation("ReportAssignedTo")
  notifications Notification[]
  creditLedgerAsOwner CreditLedger[] @relation("CreditLedgerOwner")
  creditLedgerCreatedBy CreditLedger[] @relation("CreditLedgerCreatedBy")
  creditLedgerWhereProducer CreditLedger[] @relation("CreditLedgerProducer")

  adminActionLogs AdminActionLog[]
}

/// Join table: one row per role per user. Cleaner than enum array; supports future role metadata.
model UserRole {
  id     String @id @default(cuid())
  userId String @map("user_id")
  role   Role

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, role])
  @@map("user_roles")
}

/// Producer-level delivery + pickup settings and business page. One per producer (userId).
model ProducerProfile {
  id               String   @id @default(cuid())
  userId           String   @unique
  offersDelivery   Boolean  @default(false)
  deliveryFeeCents Int      @default(0)
  pickupNotes      String?
  pickupZipCode    String?  /// Optional; fallback to User.zipCode
  /// Business page: rich About Us
  aboutUs          String?  @map("about_us")
  /// Producer/farm story
  story            String?
  /// Optional hero/business image URL
  profileImageUrl  String?  @map("profile_image_url")
  /// Contact: optional public email (if acceptInAppMessagesOnly is false)
  contactEmail     String?  @map("contact_email")
  /// General location (e.g. "North County", "Downtown Market")
  generalLocation  String?  @map("general_location")
  /// Availability hours (e.g. "Sat 9am–2pm")
  availabilityHours String? @map("availability_hours")
  /// If true, show in-app messages only; if false, also show contactEmail on storefront
  acceptInAppMessagesOnly Boolean @default(true) @map("accept_in_app_messages_only")
  /// Featured placement in discovery until this date (null = not featured).
  featuredUntil    DateTime? @map("featured_until")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/// Caregiver-specific profile (only if they offer care). One per user.
model CaregiverProfile {
  id        String   @id @default(cuid())
  userId    String   @unique @map("user_id")
  bio       String?
  serviceAreas String? @map("service_areas") /// e.g. "Dogs, cats", or radius + ZIP
  
  /// Trust signals
  yearsExperience Int? @map("years_experience")
  experienceBackground ExperienceBackground[] @default([])
  speciesComfort AnimalSpecies[] @default([])
  tasksComfort CareTaskType[] @default([])
  introVideoUrl String? @map("intro_video_url")
  introAudioUrl String? @map("intro_audio_url")
  referencesText String? @map("references_text")
  languagesSpoken String? @map("languages_spoken") /// Comma-separated for now (future: enum)
  averageResponseTimeHours Float? @map("average_response_time_hours") /// Calculated from booking creation → acceptance
  isVerified Boolean @default(false) @map("is_verified") /// Manual admin flag
  /// Featured placement in care discovery until this date (null = not featured).
  featuredUntil DateTime? @map("featured_until")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/// Care seeker–specific profile (only if they hire care). One per user.
model CareSeekerProfile {
  id        String   @id @default(cuid())
  userId    String   @unique @map("user_id")
  address   String?  /// Optional; for caregiver travel
  /// Address fields (if not already on User)
  addressLine1 String? @map("address_line_1")
  city      String?
  state     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Product {
  id                 String   @id @default(cuid())
  title              String
  description        String
  price              Float
  stockImage         String?
  imageUrl           String?
  category           String
  delivery           Boolean
  pickup             Boolean
  userId             String
  /// Null = unlimited; 0 = sold out (hide or show "sold out" in UI).
  quantityAvailable  Int?     @map("quantity_available")
  /// Selling unit: each, lb, bunch, dozen, jar, box. Null = each (display default).
  unit               String?  @map("unit")
  /// Producer indicates product is organic; null = not specified.
  isOrganic          Boolean? @map("is_organic")
  createdAt          DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders      Order[]
  orderItems  OrderItem[]
  eventProducts EventProduct[]

  @@index([userId])
  @@index([category])
}

/// Telemetry for category suggestions: product name → group/category. No PII beyond product name. Used to improve mappings later.
model ProductNameEvent {
  id             String   @id @default(cuid())
  rawName        String   @map("raw_name")
  normalizedName String   @map("normalized_name")
  groupId        String   @map("group_id")
  categoryId     String   @map("category_id")
  createdAt      DateTime @default(now())

  @@index([normalizedName])
  @@index([createdAt])
}

/// Log when producer sees a category suggestion and accepts or overrides it. Used to build frequency table for better suggestions. Never auto-changes saved products.
model ProductCategorySuggestionLog {
  id                   String   @id @default(cuid())
  normalizedTitle      String   @map("normalized_title")
  suggestedCategoryId  String   @map("suggested_category_id")
  chosenCategoryId     String   @map("chosen_category_id")
  accepted             Boolean  @map("accepted")
  createdAt            DateTime @default(now())

  @@index([normalizedTitle])
  @@index([createdAt])
}

/// Producer-submitted category; pending until admin approves. Once approved, visible to all producers. Rejected = not shown to anyone.
enum CustomCategoryStatus {
  PENDING
  APPROVED
  REJECTED
}

model CustomCategory {
  id              String              @id @default(cuid())
  name            String
  groupId         String?             @map("group_id")
  status          CustomCategoryStatus @default(PENDING)
  correctedName   String?             @map("corrected_name")
  defaultImageUrl String?             @map("default_image_url")
  createdById     String              @map("created_by_id")
  approvedAt      DateTime?           @map("approved_at")
  createdAt       DateTime            @default(now())

  createdBy User @relation(fields: [createdById], references: [id], onDelete: Cascade)
}

/// Log of admin actions (e.g. approve/reject/edit custom category) for audit.
model AdminActionLog {
  id          String   @id @default(cuid())
  performedById String  @map("performed_by_id")
  action      String   /// e.g. CUSTOM_CATEGORY_APPROVE, CUSTOM_CATEGORY_REJECT, CUSTOM_CATEGORY_EDIT
  entityType  String   @map("entity_type") /// e.g. CustomCategory
  entityId    String   @map("entity_id")
  details     Json?    /// e.g. { name, correctedName, previousStatus }
  createdAt   DateTime @default(now())

  performedBy User @relation(fields: [performedById], references: [id], onDelete: Cascade)
}

enum OrderStatus {
  PENDING
  PAID
  FULFILLED
  CANCELED
  REFUNDED
}

enum FulfillmentType {
  PICKUP
  DELIVERY
}

model Order {
  id         String   @id @default(cuid())
  buyerId    String
  producerId String
  /// Legacy single-product; use orderItems for multi-item. Keep for backward compat.
  productId  String?
  notes      String?
  paid       Boolean  @default(false)
  viaCash    Boolean  @default(false)
  status     OrderStatus @default(PENDING)
  fulfillmentType FulfillmentType @default(PICKUP) @map("fulfillment_type")
  deliveryFeeCents Int   @default(0) @map("delivery_fee_cents")
  totalCents Int     @default(0) @map("total_cents")
  pickupDate DateTime?
  paidAt     DateTime? @map("paid_at")
  fulfilledAt DateTime? @map("fulfilled_at")
  stripeSessionId String? @map("stripe_session_id")
  createdAt  DateTime @default(now())
  /// Column names match initial migration (camelCase); do not @map to snake_case.
  resolutionWindowEndsAt DateTime?
  pickupCode String?
  /// Requested delivery date/window (for delivery orders).
  requestedDeliveryDate DateTime? @map("requested_delivery_date")
  /// Store credit applied at checkout (0..totalCents). Persisted for refunds and receipts.
  creditAppliedCents Int @default(0) @map("credit_applied_cents")
  /// Amount charged via Stripe (orderTotalCents - creditAppliedCents).
  stripeChargeCents Int? @map("stripe_charge_cents")
  stripePaymentIntentId String? @map("stripe_payment_intent_id")
  /// Sum of Stripe refunds; remaining refundable = stripeChargeCents - stripeRefundedCents.
  stripeRefundedCents Int @default(0) @map("stripe_refunded_cents")
  /// Client-generated key to prevent duplicate orders on retry.
  idempotencyKey String? @unique @map("idempotency_key")

  buyer      User    @relation("OrderBuyer", fields: [buyerId], references: [id], onDelete: Cascade)
  producer   User    @relation("OrderProducer", fields: [producerId], references: [id], onDelete: Cascade)
  product    Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  orderItems OrderItem[]
  reviews    Review[]
  creditLedgerEntries CreditLedger[]

  @@index([buyerId])
  @@index([producerId])
  @@index([status])
  @@index([createdAt])
}

/// Line items for an order (multi-item cart). Snapshot price at time of order.
model OrderItem {
  id             String   @id @default(cuid())
  orderId        String   @map("order_id")
  productId      String   @map("product_id")
  quantity       Int
  unitPriceCents Int      @map("unit_price_cents")

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([productId])
}

// Subscription references producer by userId (producer); add producerId to User if needed later

/// Events: "Pick up at market booth Saturday". Preorder + pickup QR. Hours for storefront (e.g. "9am–2pm").
model Event {
  id            String   @id @default(cuid())
  userId        String
  name          String
  location      String
  eventDate     DateTime
  eventHours    String?  @map("event_hours") /// e.g. "9am–2pm"
  allowPreorder Boolean  @default(true)
  createdAt     DateTime @default(now())

  user     User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  products EventProduct[]
}

model EventProduct {
  eventId   String
  productId String
  event     Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@id([eventId, productId])
}

/// Reusable for Market (order) and Care (booking). reviewer_id, reviewee_id, type, rating, comment.
enum ReviewType {
  MARKET
  CARE
}

/// Care booking status
enum CareBookingStatus {
  REQUESTED
  ACCEPTED
  DECLINED
  CANCELED
  COMPLETED
}

/// Care service types
enum CareServiceType {
  DROP_IN
  OVERNIGHT
  BOARDING
  FARM_SITTING
}

/// Help Exchange categories (typed enum prevents data drift)
enum HelpExchangeCategory {
  FENCE_REPAIRS
  GARDEN_HARVEST
  EQUIPMENT_HELP
}

/// Help Exchange posting status
enum HelpExchangeStatus {
  OPEN
  FILLED
  CLOSED
}

/// Animal species supported
enum AnimalSpecies {
  HORSES
  CATTLE
  GOATS
  SHEEP
  PIGS
  POULTRY
  ALPACAS
  LLAMAS
  DONKEYS
  OTHER
}

/// Care task types (what caregivers can do)
enum CareTaskType {
  FEEDING
  WATERING
  MUCKING
  TURNOUT
  MEDS_ORAL
  MEDS_INJECTION
  WOUND_CARE
  HERD_CHECK
  EGG_COLLECTION
  MILKING
  LAMBING_FOALING_SUPPORT
  EQUIPMENT_USE
  OTHER
}

/// Experience background (how caregivers learned)
enum ExperienceBackground {
  GREW_UP_FARM
  FAMILY_OPERATION
  RANCH_WORK
  BARN_MANAGER
  VET_ASSISTANT
  SHOW_CIRCUIT
  SELF_TAUGHT
  FORMAL_AG_EDU
  FFA_4H
  OTHER
}

model Review {
  id          String     @id @default(cuid())
  reviewerId  String
  revieweeId  String     /// Generic: who is being reviewed (producer for market, caregiver/owner for care).
  producerId  String     /// Kept for backward compat; equals revieweeId for MARKET. Prefer revieweeId for new code.
  type        ReviewType @default(MARKET)
  orderId     String?    /// Market: link to Order. Null for CARE.
  careBookingId String?  @map("care_booking_id") /// Care: link to booking. Null for MARKET.
  privateFlag Boolean    @default(true)
  comment     String
  resolved    Boolean    @default(false)
  createdAt   DateTime   @default(now())
  rating      Int?
  producerResponse String?
  hiddenByAdmin    Boolean @default(false)
  /// Producer flagged for admin review (unfair or unrelated).
  flaggedForAdmin Boolean @default(false) @map("flagged_for_admin")
  flaggedAt   DateTime?  @map("flagged_at")
  /// Admin guidance (e.g. for producer or buyer when handling flagged review).
  adminGuidance String?   @map("admin_guidance")

  reviewer User  @relation("ReviewReviewer", fields: [reviewerId], references: [id], onDelete: Cascade)
  producer User  @relation("ReviewProducer", fields: [producerId], references: [id], onDelete: Cascade)
  reviewee User  @relation("ReviewReviewee", fields: [revieweeId], references: [id], onDelete: Cascade)
  order    Order? @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([producerId])
  @@index([revieweeId])
  @@index([createdAt])
  @@index([hiddenByAdmin])
  @@index([flaggedForAdmin])
}

/// Shared messaging: Buyer↔Producer (Market), Owner↔Caregiver (Care). One conversation per (userA, userB, optional order/booking).
model Conversation {
  id             String    @id @default(cuid())
  userAId        String
  userBId        String
  orderId        String?   /// Market: thread for this order (optional).
  careBookingId  String?   @map("care_booking_id") /// Care: thread for this booking (optional).
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  /// When userA last read this conversation (for unread count).
  userALastReadAt DateTime? @map("user_a_last_read_at")
  userBLastReadAt DateTime? @map("user_b_last_read_at")

  userA    User     @relation("ConversationUserA", fields: [userAId], references: [id], onDelete: Cascade)
  userB    User     @relation("ConversationUserB", fields: [userBId], references: [id], onDelete: Cascade)
  messages Message[]

  @@index([orderId])
  @@index([careBookingId])
  @@index([updatedAt])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  senderId       String
  body           String
  createdAt      DateTime     @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([createdAt])
}

model Subscription {
  id          String   @id @default(cuid())
  userId      String
  producerId  String
  weeklyBox   Boolean  @default(true)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())

  subscriber User @relation("SubscriptionSubscriber", fields: [userId], references: [id], onDelete: Cascade)
  producer   User @relation("SubscriptionProducer", fields: [producerId], references: [id], onDelete: Cascade)
}

/// Request an item: buyers ask for eggs, honey, etc.; producers see demand in their radius (liquidity).
model ItemRequest {
  id          String   @id @default(cuid())
  requesterId String
  description String
  zipCode     String
  radiusMiles Int?     /// Optional; producers within radius see it.
  status      String   @default("open") /// open | fulfilled | closed
  createdAt   DateTime @default(now())

  requester User @relation(fields: [requesterId], references: [id], onDelete: Cascade)
}

/// Tier 2: optional notes per producer–buyer (e.g. "CSA pickup", "egg customer"). Ownership, not marketing.
model ProducerCustomerNote {
  id         String   @id @default(cuid())
  producerId String
  buyerId    String
  note       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  producer User @relation("ProducerCustomerNoteProducer", fields: [producerId], references: [id], onDelete: Cascade)
  buyer    User @relation("ProducerCustomerNoteBuyer", fields: [buyerId], references: [id], onDelete: Cascade)

  @@unique([producerId, buyerId])
}

/// Care service listing: what a caregiver offers (e.g. "Drop-in visits for horses").
model CareServiceListing {
  id                String   @id @default(cuid())
  caregiverId       String   @map("caregiver_id")
  title             String
  serviceType       CareServiceType @map("service_type")
  speciesSupported  AnimalSpecies[] @default([]) @map("species_supported")
  tasksSupported    CareTaskType[] @default([]) @map("tasks_supported")
  rateCents         Int      @map("rate_cents")
  rateUnit          String   @map("rate_unit") /// e.g. "per visit", "per night"
  serviceRadiusMiles Int     @map("service_radius_miles")
  description       String?
  active            Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  caregiver User @relation(fields: [caregiverId], references: [id], onDelete: Cascade)
  
  @@index([caregiverId])
  @@index([active])
}

/// Care booking: a request from seeker to caregiver.
model CareBooking {
  id          String   @id @default(cuid())
  careSeekerId String  @map("care_seeker_id")
  caregiverId  String  @map("caregiver_id")
  status      CareBookingStatus @default(REQUESTED)
  startAt     DateTime @map("start_at")
  endAt       DateTime @map("end_at")
  notes       String?
  locationZip String   @map("location_zip")
  species     AnimalSpecies?
  serviceType CareServiceType? @map("service_type")
  totalCents  Int      @default(0) @map("total_cents") /// Payments later
  idempotencyKey String? @unique @map("idempotency_key") /// Prevents double-booking on double-click
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  careSeeker User @relation("CareBookingSeeker", fields: [careSeekerId], references: [id], onDelete: Cascade)
  caregiver  User @relation("CareBookingCaregiver", fields: [caregiverId], references: [id], onDelete: Cascade)
  
  @@index([careSeekerId])
  @@index([caregiverId])
  @@index([status])
  @@index([caregiverId, startAt, endAt]) /// For availability checks
}

/// Help Exchange posting: job requests for farm help (fence repairs, garden help, equipment).
model HelpExchangePosting {
  id          String   @id @default(cuid())
  createdById String  @map("created_by_id")
  title       String
  description String
  category    HelpExchangeCategory
  zipCode     String   @map("zip_code")
  radiusMiles Int?     @map("radius_miles") /// Service area
  status      HelpExchangeStatus @default(OPEN)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  createdBy User @relation(fields: [createdById], references: [id], onDelete: Cascade)
  bids      HelpExchangeBid[]
  
  @@index([status])
  @@index([zipCode])
  @@index([createdById])
}

/// Bid/application on a help exchange posting (helper offering to do the job).
enum HelpExchangeBidStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model HelpExchangeBid {
  id        String   @id @default(cuid())
  postingId String   @map("posting_id")
  bidderId  String   @map("bidder_id")
  message   String?
  status    HelpExchangeBidStatus @default(PENDING)
  createdAt DateTime @default(now()) @map("created_at")
  
  posting HelpExchangePosting @relation(fields: [postingId], references: [id], onDelete: Cascade)
  bidder  User @relation(fields: [bidderId], references: [id], onDelete: Cascade)
  
  @@index([postingId])
  @@index([bidderId])
  @@unique([postingId, bidderId])
}

