}

model Report {
  id          String   @id @default(cuid())
  reporterId String   @map("reporter_id")
  reason      ReportReason
  description String?
  entityType  String   @map("entity_type") /// "caregiver" | "help_exchange_posting" | "order"
  entityId    String   @map("entity_id")
  status      ReportStatus @default(PENDING)
  createdAt   DateTime @default(now())
  reviewedAt  DateTime? @map("reviewed_at")
  reviewedById String?  @map("reviewed_by_id")
  assignedToId String? @map("assigned_to_id")
  /// Order disputes only: problem type and proposed outcome (required when entityType = order).
  problemType OrderDisputeProblemType? @map("problem_type")
  proposedOutcome OrderDisputeProposedOutcome? @map("proposed_outcome")
  resolutionOutcome OrderDisputeResolutionOutcome? @map("resolution_outcome")
  resolutionNote String? @map("resolution_note")
  resolutionAmountCents Int? @map("resolution_amount_cents")
  
  reporter User @relation("ReportReporter", fields: [reporterId], references: [id], onDelete: Cascade)
  reviewer User? @relation("ReportReviewer", fields: [reviewedById], references: [id], onDelete: SetNull)
  assignedTo User? @relation("ReportAssignedTo", fields: [assignedToId], references: [id], onDelete: SetNull)
  attachments ReportAttachment[]
  
  @@index([status])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@index([assignedToId])
}

model ReportAttachment {
  id         String   @id @default(cuid())
  reportId   String   @map("report_id")
  url        String
  mimeType   String   @map("mime_type")
  sizeBytes  Int      @map("size_bytes")
  createdAt  DateTime @default(now()) @map("created_at")
  
  report Report @relation(fields: [reportId], references: [id], onDelete: Cascade)
  
  @@index([reportId])
}

/// Producer store credit: ledger entries (positive = issued, negative = spent). Balance = SUM(amountCents) per userId+producerId, not expired.
enum CreditLedgerReason {
  DISPUTE_RESOLUTION
  GOODWILL
  ADJUSTMENT
  CREDIT_REDEMPTION
}

model CreditLedger {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  producerId  String   @map("producer_id")
  amountCents Int      @map("amount_cents") /// positive = issued, negative = spent
  reason      CreditLedgerReason
  orderId     String?  @map("order_id")
  reportId    String?  @map("report_id")
  createdById String   @map("created_by_id")
  createdAt   DateTime @default(now()) @map("created_at")
  expiresAt   DateTime? @map("expires_at")
  
  user      User  @relation("CreditLedgerOwner", fields: [userId], references: [id], onDelete: Cascade)
  producer  User  @relation("CreditLedgerProducer", fields: [producerId], references: [id], onDelete: Cascade)
  order     Order? @relation(fields: [orderId], references: [id], onDelete: SetNull)
  createdBy User  @relation("CreditLedgerCreatedBy", fields: [createdById], references: [id], onDelete: Cascade)
  
  @@index([userId, producerId])
  @@index([orderId])
  @@index([reportId])
}

/// Request logging for observability and debugging.
model RequestLog {
  id          String   @id @default(cuid())
  requestId   String   @map("request_id")
  route       String
  method      String
  statusCode  Int      @map("status_code")
  durationMs  Int      @map("duration_ms")
  userId      String?  @map("user_id")
  ip          String?
  createdAt   DateTime @default(now()) @map("created_at")
  
  @@index([requestId])
  @@index([route])
  @@index([statusCode])
  @@index([createdAt])
  @@index([userId])
}

enum NotificationType {
  BOOKING_REQUESTED
  BOOKING_ACCEPTED
  BOOKING_DECLINED
  BOOKING_CANCELED
  BOOKING_COMPLETED
  NEW_MESSAGE
  POSTING_CREATED
  STORE_CREDIT_ISSUED
  ORDER_PLACED
  ORDER_FULFILLED
}

model Notification {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  type      NotificationType
  title     String
  body      String
  link      String?  /// URL to relevant page
  read      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, read])
  @@index([createdAt])
}
